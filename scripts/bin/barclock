#!/bin/sh
# requires wmutils-core to use like this (dynamic centering)

ROOT_ID="$(lsw -r)"
ROOT_WIDTH="$(wattr w ${ROOT_ID})"
BAR_WIDTH=250
XOFFSET="$(($(($ROOT_WIDTH / 2)) - $(($BAR_WIDTH / 2))))" 
while true; do
	echo "%{c}$(date "+%H:%M:%S, %A, %B %d")" 
	sleep 1 
done | lemonbar -g 250x15+$XOFFSET+0 -d -f -*-yuki-*-*-*-*-*-*-*-*-*-*-*-* -F "#ffffff" -B "#000000" #-R "#ffffff" -r 2
