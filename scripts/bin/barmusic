#!/bin/sh
#SONG=$(mpc current)
BH=25
MSGW=$(txtw -f metis $SONG)
BW=300
BX=1610
BY=10
BARF=metis
BAR_BG="#000000"
BAR_FG="#FFFFFF"
bar_opts="-g ${BW}x${BH}+${BX}+${BY} -B${BAR_BG} -F${BAR_FG} -f metis -d"
(
tx_len="32"
echo $(mpc current) | skroll -r -l -n $tx_len &
sleep 10 && kill $!
) | lemonbar ${bar_opts}



