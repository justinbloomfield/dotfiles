fontname "tewi"

# borderwidth
borderwidth 2

# make other shit work first
bind CM-j unmap
bind 4-s unbind
bind 4-t unbind
bind 4-n unbind

# colors
color activeborder      '#208ae2'
color inactiveborder	'#111d3c'
color font		        '#227799'
color menubg		    '#000f14'
color menufg		    '#002566'
color groupborder	    '#0000cc'
color ungroupborder	    '#7a7aff'

# autogroups
autogroup 1 Emacs
autogroup 2 qutebrowser
autogroup 3 mpv
autogroup 4 Steam
autogroup 5 zathura
autogroup 7 Gimp
autogroup 9 discord

moveamount 5
bigmoveamount 90
sticky no

#menu
command term urxvtc
command brws qutebrowser
command emcs emacs
command steam steam

# gaps
gap 30 10 10 10

# resize
bind 4M-h resizeleft
bind 4M-t resizedown
bind 4M-n resizeup
bind 4M-s resizeright

# big resize
bind 4SM-h bigresizeleft
bind 4SM-t bigresizedown
bind 4SM-n bigresizeup
bind 4SM-s bigresizeright

# move
bind 4-h moveleft
bind 4-t movedown
bind 4-n moveup
bind 4-s moveright

# big move
bind 4S-h bigmoveleft
bind 4S-t bigmovedown
bind 4S-n bigmoveup
bind 4S-s bigmoveright

# groups
bind 4-1 group1
bind 4-2 group2
bind 4-3 group3
bind 4-4 group4
bind 4-5 group5
bind 4-6 group6
bind 4-7 group7
bind 4-8 group8
bind 4-9 group9

bind 4S-1 grouponly1
bind 4S-2 grouponly2
bind 4S-3 grouponly3
bind 4S-4 grouponly4
bind 4S-5 grouponly5
bind 4S-6 grouponly6
bind 4S-7 grouponly7
bind 4S-8 grouponly8
bind 4S-9 grouponly9

# extra binds
bind 4-Tab   cycle
bind 4S-Tab  rcycle
bind 4-comma label
bind 4-q     delete
bind 4-g     grouptoggle
bind 4MC-l   cyclegroup
bind 4MC-h   rcyclegroup

bind 4-p     rofilauncher
bind 4S-v    dv	

bind 4-v vmaximize
bind 4-b hmaximize
bind 4-m maximize
bind 4-f fullscreen

bind 4-Return urxvtc
bind 4M-r    restart
bind 4M-Escape quit

# unbind shit
bind M-h unbind
bind M-j unbind
bind M-l unbind
bind M-k unbind

# fix mousebinds (sometimes it's a necessity!)
#mousebind 4-1 window_move
#mousebind 4-2 window_grouptoggle
#mousebind 4-3 window_resize
