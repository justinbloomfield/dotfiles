#!/bin/sh
# Requires GNU ed (afaict, sorry) and xrq, although you could subsitute xrq with some other xrdb-querying thingy

THEME_DIR=${THEME_DIR:-$HOME/.config/x/colours}
cls=$(ls $THEME_DIR | rofi -dmenu)
echo $cls

sed -i 1d ~/.Xresources 
sed -i "1i #include \"/home/poq/.config/x/colours/$cls\"" ~/.Xresources
xrdb ~/.Xresources
fccl=$(xrq color1)
tccl=$(xrq color3)
btccl=$(xrq color0)
ufccl=$(xrq color17)
ftccl=$(xrq color5)
bgcl=$(xrq color8)

ed -s ~/.cwmrc << EOF
H
/activeborder
s/#.*$/$fccl'/
/inactiveborder
s/#.*$/$ufccl'/
/font
s/#.*$/$ftccl'/
/menubg
s/#.*$/$btccl'/
/menufg
s/#.*$/$tccl'/
w
EOF
pkill -USR1 urxvt 2>/dev/null 
xsetroot -solid $bgcl

