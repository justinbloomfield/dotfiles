fontname "tewi"

# borderwidth
borderwidth 2

# make other shit work first
bind CM-j unmap
bind C-\/  unmap 

# colors
color activeborder      '#7a7aff'
color inactiveborder	'#000011'
color font		        '#0000cc'
color menubg		    '#020202'
color menufg		    '#0330e6'
color groupborder	    '#0000cc'
color ungroupborder	    '#7a7aff'

# autogroups
autogroup 1 emacs, Emacs, emacs@$HOST
autogroup 2 qutebrowser, surf, dillo, firefox
autogroup 3 mpv, ffplay
autogroup 7 gimp

moveamount 5
bigmoveamount 90
sticky no

#menu
command term /usr/bin/st
command brws /usr/bin/dillo
command emcs /usr/bin/emacs
#command steam /usr/bin/steam

# gaps
gap 30 10 10 10

# resize
bind 4M-h resizeleft
bind 4M-j resizedown
bind 4M-k resizeup
bind 4M-l resizeright

# big resize
bind 4SM-h bigresizeleft
bind 4SM-j bigresizedown
bind 4SM-k bigresizeup
bind 4SM-l bigresizeright

# move
bind 4-h moveleft
bind 4-j movedown
bind 4-k moveup
bind 4-l moveright

# big move
bind 4S-h bigmoveleft
bind 4S-j bigmovedown
bind 4S-k bigmoveup
bind 4S-l bigmoveright

# groups
bind 4-1 group1
bind 4-2 group2
bind 4-3 group3
bind 4-4 group4
bind 4-5 group5
bind 4-6 group6
bind 4-7 group7
bind 4-8 group8
bind 4-9 group9

bind 4S-1 grouponly1
bind 4S-2 grouponly2
bind 4S-3 grouponly3
bind 4S-4 grouponly4
bind 4S-5 grouponly5
bind 4S-6 grouponly6
bind 4S-7 grouponly7
bind 4S-8 grouponly8
bind 4S-9 grouponly9

# extra binds
bind 4-Tab   cycle
bind 4S-Tab  rcycle
bind 4-comma label
bind 4-q     delete
bind 4-g     grouptoggle
bind 4MC-l   cyclegroup
bind 4MC-h   rcyclegroup

bind 4-d     /home/poq/bin/rofilauncher
bind 4-n     ssh
bind 4-s     search
bind 4-p     st
bind 4S-v    dv	

bind 4-v vmaximize
bind 4-b hmaximize
bind 4-m maximize
bind 4-f fullscreen

bind 4M-r    restart
bind 4M-Escape quit

# unbind shit
bind M-h unbind
bind M-j unbind
bind M-l unbind
bind M-k unbind

# fix mousebinds (sometimes it's a necessity!)
#mousebind 4-1 window_move
#mousebind 4-2 window_grouptoggle
#mousebind 4-3 window_resize
