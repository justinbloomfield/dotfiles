#!/bin/sh
# Requires GNU ed (afaict, sorry) and xrq, although you could subsitute xrq with some other xrdb-querying thingy

THEME_DIR=${THEME_DIR:-$HOME/.config/x/colours}
cls=$(ls $THEME_DIR | rofi -dmenu)
echo $cls

sed -i 1d ~/.Xresources 
sed -i "1i #include \"/home/poq/.config/x/colours/$cls\"" ~/.Xresources
xrdb ~/.Xresources
bggcl=$(xrq color0)
fccl=$(xrq color1)
bgcl=$(xrq color5)
ufccl=$(xrq color17)
ugcl=$(xrq color4)
tcl=$(xrq color8)

ed -s ~/.xmonad/xmonad.hs << EOF
H
/myNormalBorderColor\ =
s/#.*$/$ufccl\"/
/myFocusedBorderColor\ =
s/#.*$/$fccl\"/
/myXmobarHlColor\ =
s/#.*$/$bgcl\"/
/myXmobarUrgentColor\ =
s/#.*$/$ugcl\"/
/myXmobarTitleColor\ =
s/#.*$/$tcl\"/
/myBackgroundColor\ =
s/#.*$/$bgcl\"/
w
EOF

ed -s ~/.xmonad/xmobar.conf << EOF
H
/borderColor\ =
s/#.*$/$bggcl\"/
/bgColor\ =
s/#.*$/$bggcl\"/
/fgColor\ =
s/#.*$/$fccl\"/
/fc=
s/#.*>%/$tcl\>\%/
/\%mpd
s/#.*>∴/$bgcl\>\∴/
w
EOF

pkill -USR1 st 2>/dev/null 
xsetroot -solid $bgcl
xmonad --recompile 
