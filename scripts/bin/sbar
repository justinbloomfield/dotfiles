#!/bin/bash
. panelsrc

clk() {
    DATETIME=$(date "+%a %b %d, %I:%M")
    echo $DATETIME
}

msc() {
    CUR="$(mpc current)"
    FG=$(xrq color4)
    PLAYING="%{F$FG}$CUR%{F}"
    echo $PLAYING
}

wrk() {
    WS=$(wsnum) #it's kinda big, don't really want it in here
    echo $WS
}

div() {
    SYM='âˆ´'
    FG=$(xrq color5)
    DIV="%{F$FG}$SYM%{F}"
    echo $DIV
}

name() {
    FG=$(xrq color5)
    ID=$(xdotool getwindowfocus)
    WIN=$(xprop -id $ID WM_NAME)
    lookfor='"(.*)"'

    if [[ "$WIN" =~ $lookfor ]]; then
        NAME=${BASH_REMATCH[1]}
        FMT_NAME="%{F$FG}$NAME%{F}"
        echo $FMT_NAME
    fi
}

#MON=$(xrandr | grep -o "^.* connected" | sed "s/ connected//")

while :; do
    echo "%{l} $(name) %{r}$(div) $(clk) "
    sleep 1
done | lemonbar $PANEL_OPTS
